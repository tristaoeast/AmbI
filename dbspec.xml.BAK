	<!-- DOW representes the days of the week, being its representation binary in the sense that it is done using 7 bits: DOW=”Sunday|Monday|Tuesday|Wednesday|Thursday|Friday|Saturday" 
	(i.e. if we want to select Tuesdays, Thursdays and Saturdays all we have to do is DOW="0|0|1|0|1|0|1") -->

	<ActivityScenarioList>
		
		<ActivityScenario ID="0" Name="Robot Vacuum Cleaner" Description="x">
			<PreCondition Time="#" DOW="0|0|1|0|1|0|1">
				<DeviceStateList>
					<DeviceState RefDevice="3" RefProperty="0" Value="1" />
					<DeviceState RefDevice="4" RefProperty="0" Value="1" />
					<DeviceState RefDevice="5" RefProperty="0" Value="1" />
					<DeviceState RefDevice="6" RefProperty="0" Value="1" />
				</DeviceStateList>
			</PreCondition>
			<ActivationCondition Time="0900" DOW="#">
				<DeviceStateList>
					<DeviceState RefDevice="7" RefProperty="0" Value="0" />
					<DeviceState RefDevice="7" RefProperty="1" Value="0" />
					<DeviceState RefDevice="8" RefProperty="0" Value="0" />
					<DeviceState RefDevice="8" RefProperty="1" Value="0" />
					<DeviceState RefDevice="9" RefProperty="0" Value="0" />
					<DeviceState RefDevice="9" RefProperty="1" Value="0" />
					<DeviceState RefDevice="10" RefProperty="0" Value="0" />
					<DeviceState RefDevice="10" RefProperty="1" Value="0" />
				</DeviceStateList>
				<ActionList>
