					<DeviceState RefDevice="7" RefProperty="1" Value="1" />
					<DeviceState RefDevice="8" RefProperty="0" Value="1" />
					<DeviceState RefDevice="8" RefProperty="1" Value="1" />
					<DeviceState RefDevice="9" RefProperty="0" Value="1" />
					<DeviceState RefDevice="9" RefProperty="1" Value="1" />
					<DeviceState RefDevice="10" RefProperty="0" Value="1" />
					<DeviceState RefDevice="10" RefProperty="1" Value="1" />
				</DeviceStateList>
				<ActionList>
					<Action RefDevice="3" RefProperty="0" Value="0" />
				</ActionList>
			</ExceptionCondition>			
		</ActivityScenario>

